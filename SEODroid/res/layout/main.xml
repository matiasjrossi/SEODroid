<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical" >

    <!-- HEADER -->

    <RelativeLayout
        android:id="@+id/mainHeader"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:orientation="horizontal"
        android:padding="15sp" >

        <ProgressBar
            android:id="@+id/mainHeaderProgressBar"
            android:layout_width="24sp"
            android:layout_height="24sp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true" />

        <TextView
            android:id="@+id/mainHeaderText"
            style="@style/HeaderText"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@id/mainHeaderProgressBar"
            android:singleLine="true" />
    </RelativeLayout>
    <!-- HEADER END -->


    <!-- DIVIDER -->

    <View
        android:id="@+id/mainFirstDivider"
        android:layout_width="fill_parent"
        android:layout_height="1dp"
        android:layout_below="@id/mainHeader"
        android:background="?android:attr/listDivider" />
    <!-- DIVIDER END -->

    <Button
        android:id="@+id/elboton"
        style="@style/ButtonText"
        android:layout_alignParentRight="true"
        android:layout_below="@id/mainFirstDivider"
        android:text="El botonazo" />

    <Button
        android:id="@+id/elboton2"
        style="@style/ButtonText"
        android:layout_alignParentRight="true"
        android:layout_below="@id/elboton"
        android:text="El botonazo++" />

</RelativeLayout>