    <style name="ListText">
        <item name="android:textColor">#ffffff</item>
        <item name="android:textColorHighlight">#000000</item>
        <item name="android:textSize">22sp</item>
        <item name="android:paddingTop">15sp</item>
        <item name="android:paddingBottom">15sp</item>
        <item name="android:paddingLeft">10sp</item>
        <item name="android:paddingRight">10sp</item>
